<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Authors>Eric Cayeux</Authors>
		<Company>NORCE Norwegian Research Institute</Company>
		<Description>A package for unit conversion that accounts for Drilling Engineering meaningful precisions</Description>
		<PackageProjectUrl>https://github.com/Open-Source-Drilling-Community/UnitConversion</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Open-Source-Drilling-Community/UnitConversion</RepositoryUrl>
		<Version>3.0.5</Version>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageId>OSDC.UnitConversion.Conversion.DrillingEngineering</PackageId>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="OSDC.UnitConversion.Conversion" Version="3.0.5" />
	</ItemGroup>

	<ItemGroup>
		<None Update="LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Update="README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>