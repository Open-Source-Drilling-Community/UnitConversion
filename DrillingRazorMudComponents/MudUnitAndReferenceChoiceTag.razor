            }
            IsHiddenAzimuthReference = azimuthReferences.Count <= 1;

            pressureReferences.Add(new Tuple<Guid, string>(new Guid("ffb90df3-d692-4502-9332-d74ddd61b67f"), "Absolute Pressure"));
            if (GaugeReferencePressureSource != null)
            {
                pressureReferences.Add(new Tuple<Guid, string>(new Guid("28ade755-e07a-4580-b51f-10507832db92"), "Gauge Pressure"));
            }
            IsHiddenPressureReference = pressureReferences.Count <= 1;

            dateReferences.Add(new Tuple<Guid, string>(new Guid("6fb296eb-eb77-4a6f-82d0-122c74e8d3cf"), "UTC"));
            dateReferences.Add(new Tuple<Guid, string>(new Guid("f0ee13c7-2b9b-46e1-8d57-3fd6070f8a9b"), "Local Time"));
            #endregion

            unitSystemLightList = new List<UnitSystemLight>();
            unitSystemLightList.Clear();
            if (!string.IsNullOrEmpty(HttpHost) &&
                !string.IsNullOrEmpty(HttpBasePath) &&
                !string.IsNullOrEmpty(HttpController))
            {
                //Case when a controller of BaseUnitSystem is defined
                //    - this offers the possibility to define custom BaseUnitSystem
                //    - the child razor component of the present one (this) must indicate how to send requests to this controller (route, endpoint)
                httpClient = new HttpClient
                    {
                        BaseAddress = new Uri(HttpHost + HttpBasePath)
                    };
                httpClient.DefaultRequestHeaders.Accept.Clear();
                httpClient.DefaultRequestHeaders.Accept.Add(new System.Net.Http.Headers.MediaTypeWithQualityHeaderValue("application/json"));
                try
                {
                    var a = await httpClient.GetAsync(HttpController + "LightData/");
                    if (a.IsSuccessStatusCode)
                    {
                        string str = await a.Content.ReadAsStringAsync();
                        if (!string.IsNullOrEmpty(str))
                        {
                            unitSystemLightList = System.Text.Json.JsonSerializer.Deserialize<List<UnitSystemLight>>(str);
                        }
                    }
                }
                catch (Exception ex)
                {
                    logger.LogError(ex, "Problem while initializing first step MudUnitAndReferenceChoiceTag");
                }
            }
            else
            {
                //Case when no controller is available: default UnitChoiceSets are used
                List<BaseUnitSystem> uList = [DrillingUnitSystem.SIUnitSystem, DrillingUnitSystem.MetricUnitSystem, DrillingUnitSystem.ImperialUnitSystem, DrillingUnitSystem.USUnitSystem];
                foreach (DrillingUnitSystem uSys in uList)
                {
                    if (uSys != null)
                        unitSystemLightList.Add(new UnitSystemLight()
                            {
                                ID = uSys.ID,
                                Name = uSys.Name,
                                Description = uSys.Description,
                                IsDefault = uSys.IsDefault,
                                IsSI = uSys.IsSI
                            });
                }
            }
            //Initializing baseUnitSystem_ and associated UnitSystemName: default value or checking the validity of the given one
            UnitSystemLight? defaultUnitSystemLight = null;
            if (unitSystemLightList != null)
            {
                foreach (UnitSystemLight uSysLight in unitSystemLightList)
                {
                    defaultUnitSystemLight = uSysLight;
                    if (string.IsNullOrEmpty(UnitSystemName) || UnitSystemName.Equals(uSysLight.Name))
                        break; //the given UnitSystemName is checked against each name in the available unitChoiceSets
                }
                baseUnitSystem_ = DrillingUnitSystem.Get(defaultUnitSystemLight!.ID);
                if (defaultUnitSystemLight != null)
                    UnitSystemName = defaultUnitSystemLight.Name;
            }
            await InvokeAsync(() => { StateHasChanged(); });
        }
        catch (Exception ex)
        {
            logger.LogError(ex, "Problem while initializing third step MudUnitAndReferenceChoiceTag");
        }
        InitializedOnce = true;
    }

